{
    "generator": "retain_lines",

    "rules": [
        {
            "rule": "inject_global_value",
            "identifier": "DEBUG",
            "value": true
        },
        {
            "rule": "convert_require",

            "current": {
                "name": "path",

                "sources": {
                    "@client": "src/client",
                    "@server": "src/server",    
                    "@shared": "src/shared",
                    "@packages": "roblox_packages"
                }
            },

            "target": {
                "name": "roblox",

                "rojo_sourcemap": "sourcemap.json",
                "indexing_style": "property"
            }
        }
    ]
}